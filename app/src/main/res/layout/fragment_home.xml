<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmenty.HomeFragment">

    <ImageView
        android:id="@+id/figura_im"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/news_txt"
        android:src="@drawable/ic_baseline_list_24"
        android:layout_width="60dp"
        app:layout_constraintBottom_toTopOf="@+id/home_rv"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/news_txt"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        android:text="Новости IT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_rv"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@+id/news_txt"
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_height="match_parent"/>

